{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": false,
    "target": "es2019",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["es2019", "es6", "dom", "esnext.asynciterable"],
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
